<!-- this is the menu item 'Site List' that shows up when you already have a site open and want to go back to the list -->
<item id="base_siteList2" label="[[base-vsite.virtualSiteList]]" 
    description="[[base-vsite.virtualSiteList_help]]"
    url="javascript: top.code.cList_setRoot(top.siteMap['base_sitemanage']); setTimeout('top.code.cList_selectPath(\'base_siteList1\')', 500); void 0;">
<!-- 	this is essentially doing a .5 second sleep before running the selectPath.
	that's because some browsers encounter race conditions when running our javascript
	and will fail to display the new menu unless we put in a sleep.
-->
    <parent id="base_siteadmin" order="5">
        <access require="adminUser"/>
    </parent>  
</item>
