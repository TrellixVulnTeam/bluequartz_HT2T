</class>

<class name="Capabilities" namespace="modifyMaillist" version="0.1">
	<property name="capable" type="boolean" default="1"
		readacl="ruleCapable(modifyMaillist)"/>
	<property name="nameTag" type="scalar" default="[[base-maillist.cap_modifyMaillist]]"/>
</class>



