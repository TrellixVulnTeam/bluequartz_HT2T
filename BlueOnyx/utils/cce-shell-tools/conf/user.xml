<shell>
  <product value = "RaQXTR"/>
  <product value = "RaQ4"/>
  <product value = "RaQ3"/>
  <product value = "RaQ2"/>
  <version value = "[VERSION]"/>
  <cadduser>
	<aliases opts = "aliases=s e>aliases"
		label = "aliases"
		type = "array"
		help = "Additional names that the user will receive email as"/>
	<fqdn opts = "domain=s fqdn>domain d>domain"
		label = "fqdn"
		help = "The fully qualified domain name of the site (fqdn) the user will be added to"/>
	<group opts = "group=s g>group"
		label = "group"
		help = "The groups name of the site the user will be added to"/>
	<fullName opts = "fullName=s f>fullName" 
		label = "fullName"
		help = "The full name of the user"/>
	<password opts = "password=s p>password" 
		label = "password"
		help = "The password for the user"/>
	<forward opts = "forward=s w>forward enable-forward>forward" 
		label = "forward"
		help = "Email forwarding causes email received in the future
to be automatically forwarded to the email addresses specified"/>
	<admin opts = "admin a>admin" 
		label = "admin"
		help = "Site administrators are users who are capable of configuring
settings for a site"/>
	<fpx opts = "fpx x>fpx enable-fpx>fpx enable-frontpage>fpx" 
		label = "fpx"
		help = "Enable FPX for user"/>
	<apop opts = "apop o>apop enable-apop>apop" 
		label = "apop"
		help = "Enable APOP for user"/>
	<quota opts = "quota=i q>quota"
		label = "quota"
		help = "User Quota in MB"
		validator = "isInt"/>
  </cadduser>
</shell>
