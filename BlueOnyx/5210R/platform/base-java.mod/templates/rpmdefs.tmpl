# configuration bits for mod_rpmize
# syntax:
# <begin [x]section>
# <end [x]section>
#
# x an be $ for a string or % for a hash.
# if a hash is being used, you can add sub-sections with
# <begin sub-section>
# <end sub-section>


<begin $DESCRIPTION>
%package [LABEL]
Group: CCE/[VENDOR]
Summary: [LABEL] for [VENDOR]-[SERVICE].
[AUTOFILL]
[BUILDARCH]
OBSOLETES: mod_jk
OBSOLETES: mod_jk-ap20

%description [LABEL]
The [VENDOR]-[SERVICE]-[LABEL] package contains the [LABEL]
information for [VENDOR]-[SERVICE].

<end $DESCRIPTION>

<begin %PREP>
<end %PREP>

<begin %SETUP>
<end %SETUP>

<begin %BUILD>
<end %BUILD>

<begin %INSTALL>
<end %INSTALL>

<begin %FILES>
<begin HEADER>
%files [LABEL]
%defattr(-,root,root)
<end HEADER>

<begin locale>
[AUTOFILL]

<end locale>

<begin glue>
%config /etc/profile.d/java.sh
%config /etc/httpd/conf.d/mod_jk.conf
%config /etc/tomcat/jk/workers.properties
%config(noreplace)/etc/tomcat/tomcat-users.xml.dist
%config(noreplace)/etc/tomcat/tomcat.logrotate.dist
%attr(0755,root,root)%{RootDir}/sbin/java_load_war.pl

%ifarch %ix86
%attr(0755,root,root)/usr/lib/httpd/modules/mod_jk.so
%endif
%ifarch x86_64
%attr(0755,root,root)/usr/lib64/httpd/modules/mod_jk.so
%endif

[AUTOFILL]
<end glue>

<begin ui>
[AUTOFILL]

<end ui>

<begin capstone>
%{RootDir}/capstone/%{Vendor}-%{Service}.cap
[AUTOFILL]

<end capstone>
<end %FILES>

