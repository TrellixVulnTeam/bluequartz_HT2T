<begin glue>
[AUTOFILL]

<end glue>

<begin ui>
[AUTOFILL]
%{RootDir}/ui/web/*.php
%{RootDir}/ui/web/robots.txt
%{RootDir}/ui/web/*.html*
%{RootDir}/ui/web/error
%{RootDir}/ui/web/libImage/*

<end ui>

<begin capstone>
