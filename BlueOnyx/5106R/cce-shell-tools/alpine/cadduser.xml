<?xml version = "1.0" encoding = "iso-8859-1"?>
<cadduser>
	<aliases>
		<opts value = "aliases=s a>aliases"/>
		<label value = "aliases"/>
		<nameSpace value = "Email"/>
		<type value = "array"/>
		<help value = "list of email alaises, comma delmited"/>
	</aliases>
	<fqdn>
		<opts value = "fqdn=s domain>fqdn d>fqdn"/>
		<label value = "fqdn"/>
		<help value = "fully quilified domain name ie. www.domain.com"/>
	</fqdn>
	<group>
		<opts value = "group=s g>group groupname>group"/>
		<label value = "group"/>
		<help value = "group name of the site you wish to add the user to ie. site2"/>
	</group>
 	<help>
		<opts value = "help h>help ?>help"/>
		<label value = "help"/>
		<help value = "print help text"/>
	</help>
	<quota>
		<opts value = "quota=i q>quota"/> 
		<label value = "quota"/>
		<nameSpace value = "Disk"/>
		<help value = "quota for the user in MB, cannot exceed site quota"/>
	</quota>
	<shell>
		<opts value = "shell t>shell telnet>shell enable-telnet>shell enable-shell>shell"/> 
		<label value = "enabled"/>
		<nameSpace value = "Telnet"/>
		<help value = "shell (telnet) enabled"/>
	</shell>
	<fullname>
		<opts value = "fullname=s f>fullname"/>
		<label value = "fullName"/>
		<help value = "user's full name, user name is used if not provided"/>
	</fullname>
	<name>
		<opts value = "name=s n>name username>name"/>
		<label value = "name"/>
		<help value = "user name (required)"/>
	</name>
	<apop>
		<opts value = "apop o>apop enable-apop>apop"/>
		<label value = "enabled"/>
		<nameSpace value = "APOP"/>
		<help value = "apop enabled"/>
	</apop>
	<password>
		<opts value = "password=s p>password"/>
		<label value = "password"/>
		<help value = "user password"/>
	</password>		
	<remarks>
		<opts value = "remarks=s r>remarks"/>
		<label value = "description"/>
		<help value = "user remarks"/>
	</remarks>
	<admin>
		<opts value = "admin s>admin siteadmin>admin"/>
		<label value = "admin"/>
		<help value = "user is a site administrator"/>
	</admin>
	<forward>
		<opts value = "forward=s w>forward forwardemail>forward"/>
		<label value = "forwardEmail"/>
		<nameSpace value = "Email"/>
		<type value = "Array"/>
		<help value = "foward email to email address"/>
	</forward>
	<fpx>
		<opts value = "fpx frontpage>fpx x>fpx enable-fpx>fpx"/>
		<label value = "enabled"/>
		<nameSpace value = "Frontpage"/>
		<help value = "FrontPage server extentions enabled"/>
	</fpx>
</cadduser>
